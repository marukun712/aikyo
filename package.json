{
  "name": "aikyo",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "companion": "tsx ./scripts/companion.ts",
    "firehose": "tsx ./scripts/firehose.ts",
    "aituberkit": "tsx ./scripts/aituberkit-bridge.ts",
    "translate": "tsx ./scripts/translate-docs.ts",
    "format": "biome format ./",
    "format:fix": "biome format --write ./",
    "lint": "biome lint ./",
    "lint:fix": "biome lint --write ./",
    "check": "biome check ./",
    "check:fix": "biome check --write ./",
    "changeset": "changeset",
    "bundle": "pnpm -r --filter './packages/*' run build",
    "release": "pnpm run bundle && changeset publish"
  },
  "overrides": {
    "ms": "3.0.0-canary.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@changesets/cli": "^2.29.7",
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "tsx": "^4.20.5"
  }
}
